public class CountEvenNumbersInIntegerArray {

	public static void main(String[] args) {
	int ar[] = {4,7,3,2,7,9,123,22,2};
System.out.println(countEvens(ar));
	}
	
	public static int countEvens(int[]nums) {
		int count=0;
		for(int i=0; i<nums.length; i++) {
			if(nums[i]%2==0) {
				count++;
			}
		}
			return count;
	}
}
