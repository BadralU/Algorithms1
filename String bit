
public class ShortenString {

	public static void main(String[] args) {
		String sat = "Hello world!";
		System.out.println(shortStr(sat));

	}
	
	public static String shortStr(String str) {
		String result="";
		String s1= "Microphone";
		for(int i=0; i<s1.length(); i+=2) {
			result+=str.charAt(i);
		}
		return result;
	}
}
